mixin createChatCard(chatsData = [])
  each chat, positions in chatsData
    each data in chat
      .contact
        a(href="", class="flex contact-card")
            img(src=data.avatar, alt="", class="avatar")
            .contact-data(class="w-100 overflow-hidden")
                .name-time(class="flex")
                    p(class="text-bold")= data.name
                    p(class="text-mute small-text")= data.time
                p(class="text-mute small-text text-ellipsis")= data.message

+createChatCard(chats)