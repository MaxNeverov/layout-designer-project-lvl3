    .current-chat-footer(class="mini-chat-footer m-lr-3")
        form(action="", class="current-chat-form  mini-chat-form flex")
            input(type="textarea", placeholder="Напишите сообщение...", class="w-100 current-chat-input")
            button(class="form-button")
                svg(class="svg-button")
                    use(xlink:href="images/sprite.svg#cursor")