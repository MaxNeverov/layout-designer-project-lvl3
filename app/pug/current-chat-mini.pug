mixin createMessage(messagesData = [])
    each message, positions in messagesData
        each data in message
            .input-message(class="mb-3 flex align-items-end")
                img(src= data.avatar, alt="", class="avatar img-none mr-1r")
                .input-message-right-part(class="flex")
                    p(class="text-bold message-autor")= data.name
                    p(class="text-mute message-comment")= data.message
                    p(class="text-mute small-text message-time")= data.time
            .output-message(class="mb-3 flex align-items-end justify-content-end")
                img(src=data.avatarOut, alt="", class="avatar img-none mr-1r")
                .output-message-right-part(class="flex")
                    p(class="message-comment")= data.messageOut
                    p(class="small-text message-time")= data.time

.right-chat(class="h-100  flex")
    .current-chat-header(class="flex p-4")
        img(src="/images/avatar_4.jpg", alt="", class="avatar mr-15r")
        .contact-data
            p(class="text-bold") Вениамин Редакторович
            p(class="text-mute small-text") Онлайн
    .relative(class="current-chat-body m-lr-3 h-100")
        .absolute(class="overflow-scroll hide-scrollbar w-100 h-100")
            .message-cont(class="pb-5 pt-3r")
                +createMessage(messages)
                .input-message(class="flex align-items-end")
                    img(src= "images/avatar_4.jpg", alt="", class="img-none avatar mr-1r")
